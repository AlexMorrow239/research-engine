# Database
MONGODB_URI=mongodb://localhost:27017/research-portal

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_DOWNLOAD_SECRET=your-download-secret-here

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_BUCKET_NAME=your-bucket-name

# Email
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_ADDRESS=your-email@example.com

# Development URLs
FRONTEND_URL_LOCAL=http://localhost:5173
FRONTEND_URL_NETWORK=http://your-network-ip:5173

# Production URLs (required only in production)
FRONTEND_URL=https://your-production-frontend-url

# Admin
ADMIN_PASSWORD=your-admin-password

# Network Mode
NETWORK_MODE=false